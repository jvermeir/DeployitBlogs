<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.xebia</groupId>
    <artifactId>DemoApp</artifactId>
    <packaging>dar</packaging>
    <version>1.0</version>
    <name>DemoApp Maven Webapp dar</name>
    <url>http://maven.apache.org</url>
    <pluginRepositories>
        <pluginRepository>
            <id>XLDeployRepo</id>
            <url>https://dist.xebialabs.com/public/maven2/</url>
        </pluginRepository>
    </pluginRepositories>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.xebialabs.deployit</groupId>
                    <artifactId>maven-deployit-plugin</artifactId>
                    <version>4.5.2</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>com.xebialabs.deployit</groupId>
                <artifactId>maven-deployit-plugin</artifactId>
                <version>4.5.2</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>deployit-generate-package</id>
                        <phase>package</phase>
                        <goals>
                            <goal>generate-deployment-package</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>deployit-plugin-deploy</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                        <configuration>
                            <environmentId>Environments/test</environmentId>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <username>${deployit.username}</username>
                    <password>${deployit.password}</password>
                    <deploymentPackageProperties>
                        <orchestrator>default</orchestrator>
                        <satisfiesReleaseNotes>true</satisfiesReleaseNotes>
                    </deploymentPackageProperties>
                    <deployables>
                        <jee.War name="demo-war" groupId="com.xebia" artifactId="DemoApp" artifactType="war"/>
                    </deployables>
                    <environmentId>Environments/test</environmentId>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.xebia</groupId>
            <artifactId>DemoApp</artifactId>
            <version>1.0</version>
            <type>war</type>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
